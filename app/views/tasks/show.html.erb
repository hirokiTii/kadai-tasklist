<h1>id=<%=@task.id %>のタスク詳細画面</h1>

<table class = "table table-bordered">
    <tr>
        <th>id</th>
        <td><%= @task.id %></td>
    </tr>
    <tr>
        <th>進行状況</th>
        <td><%= @task.status %></td>
    </tr>
    <tr>
        <th>タスク</th>
        <td><%= @task.content %></td>
    </tr>
</table>

<%= link_to '編集ページへ', edit_task_path(@task), class: 'btn btn-default' %> 
<%= link_to 'このメッセージを削除する', @task, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger' %>

